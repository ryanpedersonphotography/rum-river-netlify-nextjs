{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["/^--/"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "layer", "apply", "config"]
      }
    ],
    "declaration-property-value-disallowed-list": {
      "/^(color|background|background-color|border-color|fill|stroke)$/": ["/^#/", "/^rgb/"],
      "/^(padding|margin|gap|top|left|right|bottom|width|height|max-width|min-width|font-size|line-height)$/": ["/^[0-9]+px$/"]
    },
    "comment-empty-line-before": null,
    "custom-property-empty-line-before": null
  }
}
